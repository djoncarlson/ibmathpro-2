<%= simple_form_for(@idea) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :hl, label: "Higher Level" %>
    <%= f.input :sl, label: "Standard Level" %>
    <%= f.input :st, label: "Math Studies" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
